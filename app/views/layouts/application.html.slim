sass:
  body, html
    height: 100%
    font-family: 'Hiragino Kaku Gothic Pro', 'ヒラギノ角ゴ Pro W3', Meiryo, メイリオ, Osaka, 'MS PGothic', arial, helvetica, sans-serif

  #container
    width: 100%
    position: relative
    height: auto !important
    height: 100%
    min-height: 100%
  #contents
    padding-bottom: 200px
  #footer
    position: fixed
    bottom: 0
    width: 100%
    height: 200px
    z-index: 500000
  .blank
    margin-top: 30px
  p.nav-img-container
    margin: 0px
    line-height: 64px
    height: 64px
    width: 64px
    display: inline-block
    img.nav-img
      height: 55px
      margin-top: calc((64px - 55px) / 2)

doctype html
html
  head
    title
      | 薫陶
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    /= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    script src="#{ENV['WEBPACKER_DEV_SERVER']}/packs/application.js"
    link[
      rel="stylesheet"
      type="text/css"
      href="#{ENV['WEBPACKER_DEV_SERVER']}/packs/application.css"
    ]
  body
    #content
